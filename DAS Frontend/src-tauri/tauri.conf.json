{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Educore",
  "version": "1.0.4",
  "identifier": "com.dasmgmt.management",
  "build": {
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:prod",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Educore",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' ipc: http://ipc.localhost http://localhost:3000 http://127.0.0.1:8000; img-src 'self' asset: http://asset.localhost data: http://localhost:3000; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' http://localhost:3000 http://localhost:8000 http://127.0.0.1:8000 http://ipc.localhost ws://localhost:3000 https://github.com https://*.github.com https://api.github.com;"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": ["icons/icon.ico"],
    "externalBin": ["binaries/school-management-backend"],
    "resources": [],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Qais9alnoS/educore/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkyM0RGREFFMkM2MUJDMzMKUldRenZHRXNydjA5a2t1ekRHeVdDaE5yWEx1bHVXbWVONjZKREZZKytaZlp0R0Q4SVR6VVFCdncK"
    }
  }
}
